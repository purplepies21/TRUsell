<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetupActivity"
    android:background="@color/colorBackgroundDark"
    >

    <LinearLayout
        android:id="@+id/setup_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="703dp"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="31dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/setup_profile_picture"
            android:layout_width="wrap_content"
            android:layout_height="198dp"
            android:layout_marginStart="126dp"
            android:layout_marginEnd="125dp"
            android:layout_marginBottom="49dp"
            android:src="@drawable/account"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="5dp"
            app:civ_circle_background_color="@color/colorPrimary" />

        <EditText
            android:id="@+id/setup_username_ET"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="31dp"
            android:drawableLeft="@drawable/accountwhite"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Username"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/setup_fullname_ET"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="29dp"
            android:drawableLeft="@drawable/face"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Full Name"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/setup_City_ET"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginBottom="62dp"
            android:drawableLeft="@drawable/flag"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="City"
            android:inputType="textMultiLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="125dp"
                android:layout_height="49dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/setup_confirm_button"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="121dp"
                android:layout_marginBottom="172dp"
                android:background="@color/colorPrimaryDark2"
                android:text="Confirm" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>