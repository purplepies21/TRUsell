<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/colorBackgroundDark">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="79dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="181dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="115dp"
                android:layout_height="40dp" />

            <ImageView
                android:id="@+id/register_icon_IV"
                android:layout_width="178dp"
                android:layout_height="136dp"
                app:srcCompat="@drawable/icon" />

        </LinearLayout>

        <EditText
            android:id="@+id/login_email_ET"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/email"
            android:ems="10"
            android:hint="email address"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccentDark" />

        <EditText
            android:id="@+id/login_pass_ET"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:drawableLeft="@drawable/lock"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccentDark"
            android:textColorLink="@color/colorAccent" />

        <Button
            android:id="@+id/login_account_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark2"
            android:text="Login" />

        <TextView
            android:id="@+id/needaccountTV"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Need an Account?"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="36dp"
                android:layout_height="79dp" />

            <Button
                android:id="@+id/login_register_button"
                android:layout_width="342dp"
                android:layout_height="37dp"
                android:background="@color/colorPrimaryDark2"
                android:text="Create An Account" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Or Login With"
            android:textColor="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/loginGoogleIV"
                android:layout_width="186dp"
                android:layout_height="79dp"
                app:srcCompat="@drawable/googleicon" />

            <Space
                android:layout_width="46dp"
                android:layout_height="59dp" />

            <ImageView
                android:id="@+id/loginPhoneIV"
                android:layout_width="175dp"
                android:layout_height="83dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/phone" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>